@model List<Usuario>
<h1>Usuários cadastrados no sistema</h1>

<p class="text-danger">@ViewData["Mensagem"]</p>

<table class="table">
    <thead>
        <tr >
            <th scope="row">Nome</th>
            <th scope="row">Login</th>
            <th scope="row">Tipo</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Usuario u in Model)
        {
        <tr>
            <td>@u.Nome</td>
            <td>@u.Login</td>
            @if(u.Tipo==Usuario.ADMIN)
            {
                <td>Administrador</td>
            }
            else
            {
                <td>Padrão</td>
            }
            


            <td><a href="/Usuarios/EditarUsuario?id=@u.Id">
                <button type="button" class="btn btn-success">Editar</button>
            </a></td>


            <td><a href="/Usuarios/ExcluirUsuario?id=@u.Id">
                <button type="button" class="btn btn-danger">Excluir</button>
            </a></td>
        
        
        
        </tr>
        }
    </tbody>
</table>
 
<a href="/Usuarios/RegistrarUsuario">
    <button type="button" class="btn btn-primary">Novo Usuário</button>
</a>
    

    
